<!doctype html>
<html ng-app="spark">
<head>
    <!-- META -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Spark</title>

    <!-- SCROLLS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"><!-- load bootstrap -->
    <style>
      ul.nav-right-elements{
        text-decoration: none;
      }
      ul.nav-right-elements > li{
        text-decoration: none;
        float: left;
        padding: 10pt 10pt;
      }
      .navbar{
        background: linear-gradient(to top, rgba(255,255,255,0.1), rgba(255, 255, 255, 1.0) 45%);
        border: none;
        height: 60pt;
      }
    </style>

    <!-- SPELLS -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script><!-- load jquery -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script><!-- load angular -->
    <script>
        var sparkApp = angular.module('spark', []);
        sparkApp.controller('sparkController', function ($scope, $http,$routeParams) { 
            $scope.login = function (username,password) {
                if(username !== undefined && password !== undefined){
                     $location.path('/signup')
                    // window.location.href="https://www.google.co.in/?user="+username+"pass="+password;
                }
            };
        });
        sparkApp.config([
            '$routeProvider', function($routeProvider,sparkController) {
                $routeProvider.when('/signup', {templateUrl: 'signup.html', controller: 'sparkController'});
                $routeProvider.otherwise({redirectTo: '/'}); 
            }]);
    </script>
</head>
<body ng-controller="sparkController">

<!-- Navbar for the application -->
 <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
         <div class="pull-left">
           <img src="http://design.ubuntu.com/wp-content/uploads/ubuntu-logo32.png" alt="" height="50">
         </div>
         <ul class="nav-right-elements pull-right">
           <li>
             <a href="#">Log In</a>
           </li>
           <li>
             <a href="#">Sign Up</a>
           </li>
         </ul>
        </div>
      </nav>
      <div ng-view="studenttable"></div>
  <!-- Section of Page Content -->
  <section style="height:100vh; background: url('http://www.hdwallpapersllc.com/wp-content/uploads/2015/07/digital-colorful-abstract-HD-wallpaper.jpg'); background-size:cover; ">
     
      <div class="container" style="background: #eee; padding-top:20vh;">
      
       <div class="col-md-4 col-md-offset-4 text-center">
          <input type="text" ng-model = "username"  placeholder="Enter Phone Number" class="form-control">
          <input type="password" ng-model = "password"  placeholder="Password" class="form-control">
          <input type="button" ng-click ="login(username,password)" value="Log In Now" />
        <span>Don't have an account ? <br><a href="#">Sign Up Now!</a></span>
       
       </div>
        
      </div>
    </section>
</body>
</html>